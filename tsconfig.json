{
	"compilerOptions": {
		"target": "ES2015",
		"module": "esnext",
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"],
		"types": ["vite/client"]
	},
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"exclude": ["node_modules"]
}
